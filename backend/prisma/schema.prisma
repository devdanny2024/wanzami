generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  SUPER_ADMIN
  CONTENT_MANAGER
  BLOG_EDITOR
  MODERATOR
  SUPPORT
  FINANCE
  ANALYTICS
  OPS
}

model User {
  id        BigInt   @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  ppvStrikeCount Int       @default(0)
  ppvLastStrikeAt DateTime?
  ppvBanned    Boolean    @default(false)
  emailVerified Boolean @default(false)
  verificationToken String? @unique
  verificationTokenExpires DateTime?
  resetToken String?
  resetTokenExpires DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions Session[]
  devices  Device[]
  profiles Profile[]
  billing  BillingAccount?
  deviceProfiles DeviceProfile[]
  auditLogs AdminAuditLog[]
  ppvPurchases PpvPurchase[]
  ppvViolations PpvViolation[]
  supportTickets SupportTicket[]
  supportTicketMessages SupportTicketMessage[]
}

model Session {
  id           BigInt   @id @default(autoincrement())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       BigInt
  deviceId     String
  refreshToken String
  userAgent    String?
  ipAddress    String?
  createdAt    DateTime @default(now())
  expiresAt    DateTime

  engagementEvents EngagementEvent[]

  @@index([userId, deviceId])
}

model Device {
  id            BigInt         @id @default(autoincrement())
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        BigInt
  deviceId      String
  label         String?
  lastSeen      DateTime       @default(now())
  createdAt     DateTime       @default(now())
  deviceProfile DeviceProfile? @relation("DeviceToProfile")

  @@unique([userId, deviceId])
}

model Invitation {
  id        BigInt   @id @default(autoincrement())
  email     String
  role      Role
  token     String   @unique
  expiresAt DateTime
  acceptedAt DateTime?
  createdBy BigInt
  createdAt DateTime @default(now())

  @@index([email])
}

model Profile {
  id         BigInt   @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     BigInt
  name       String
  avatarUrl  String?
  kidMode    Boolean  @default(false)
  language   String   @default("en")
  autoplay   Boolean  @default(true)
  country    String   @default("UNKNOWN")
  birthYear  Int?
  preferences Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  devices DeviceProfile[]
  engagementEvents EngagementEvent[]
  preferenceSnapshot ProfilePreferenceSnapshot?
  recentViews ProfileRecentViews?

  @@index([userId])
}

enum PaymentProvider {
  PAYSTACK
  FLUTTERWAVE
}

enum TitleType {
  MOVIE
  SERIES
}

enum Rendition {
  R4K
  R2K
  R1080
  R720
  R360
}

enum AssetStatus {
  PENDING
  PROCESSING
  READY
  FAILED
}

enum UploadStatus {
  PENDING
  UPLOADING
  PROCESSING
  COMPLETED
  FAILED
  CANCELED
}

enum PopularityWindow {
  DAILY
  TRENDING
}

model BillingAccount {
  id                  BigInt           @id @default(autoincrement())
  user                User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId              BigInt           @unique
  provider            PaymentProvider
  providerCustomerId  String?
  planCode            String?
  status              String          @default("inactive")
  billingEmail        String?
  paymentMethodBrand  String?
  paymentMethodLast4  String?
  country             String?
  postalCode          String?
  nextPaymentAt       DateTime?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
}

model DeviceProfile {
  id             BigInt    @id @default(autoincrement())
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         BigInt
  device         Device    @relation("DeviceToProfile", fields: [deviceRecordId], references: [id], onDelete: Cascade)
  deviceRecordId BigInt
  profile        Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId      BigInt
  lastUsedAt     DateTime  @default(now())

  @@unique([deviceRecordId])
  @@index([userId, profileId])
}

model Title {
  id          BigInt    @id @default(autoincrement())
  type        TitleType
  name        String
  description String?
  genres      String[]  @default([])
  cast        String[]  @default([])
  crew        String[]  @default([])
  language    String?   @default("en")
  maturityRating String?
  runtimeMinutes Int?
  countryAvailability String[] @default([])
  isOriginal  Boolean   @default(false)
  releaseDate DateTime?
  posterUrl   String?
  thumbnailUrl String?
  trailerUrl   String?
  previewSpriteUrl String?
  previewVttUrl String?
  introStartSec   Int?
  introEndSec     Int?
  archived    Boolean   @default(false)
  pendingReview Boolean @default(false)
  isPpv          Boolean   @default(false)
  ppvPriceNaira  Int?
  ppvCurrency    String?   @default("NGN")
  ppvDescription String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  seasons        Season[]
  episodes       Episode[]
  assetVersions  AssetVersion[]
  uploadJobs     UploadJob[]
  engagementEvents EngagementEvent[]
  titleEmbedding   TitleEmbedding?
  similarAsSource  TitleSimilarity[] @relation("SourceTitle")
  similarAsTarget  TitleSimilarity[] @relation("TargetTitle")
  ppvPurchases     PpvPurchase[]
  ppvViolations    PpvViolation[]
}

model Episode {
  id            BigInt   @id @default(autoincrement())
  title         Title    @relation(fields: [titleId], references: [id], onDelete: Cascade)
  titleId       BigInt
  season        Season?  @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  seasonId      BigInt?
  seasonNumber  Int
  episodeNumber Int
  name          String
  synopsis      String?
  runtimeMinutes Int?
  previewSpriteUrl String?
  previewVttUrl String?
  introStartSec   Int?
  introEndSec     Int?
  pendingReview Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  assetVersions AssetVersion[]
  uploadJobs    UploadJob[]
  engagementEvents EngagementEvent[]

  @@index([titleId, seasonNumber, episodeNumber])
}

model Season {
  id            BigInt   @id @default(autoincrement())
  title         Title    @relation(fields: [titleId], references: [id], onDelete: Cascade)
  titleId       BigInt
  seasonNumber  Int
  name          String?
  description   String?
  releaseDate   DateTime?
  status        String?
  posterUrl     String?
  thumbnailUrl  String?
  previewSpriteUrl String?
  previewVttUrl String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  episodes      Episode[]

  @@unique([titleId, seasonNumber])
  @@index([titleId])
}

model AssetVersion {
  id         BigInt      @id @default(autoincrement())
  title      Title?      @relation(fields: [titleId], references: [id], onDelete: Cascade)
  titleId    BigInt?
  episode    Episode?    @relation(fields: [episodeId], references: [id], onDelete: Cascade)
  episodeId  BigInt?
  rendition  Rendition
  url        String?
  sizeBytes  BigInt?
  durationSec Int?
  status     AssetStatus @default(PENDING)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@index([titleId, episodeId])
  @@unique([titleId, episodeId, rendition])
}

model UploadJob {
  id            BigInt       @id @default(autoincrement())
  title         Title?       @relation(fields: [titleId], references: [id], onDelete: Cascade)
  titleId       BigInt?
  episode       Episode?     @relation(fields: [episodeId], references: [id], onDelete: Cascade)
  episodeId     BigInt?
  status        UploadStatus @default(PENDING)
  bytesUploaded BigInt       @default(0)
  bytesTotal    BigInt?
  error         String?
  payload       Json?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([titleId, episodeId, status])
}

model ErrorLog {
  id        BigInt   @id @default(autoincrement())
  level     String   @default("ERROR")
  message   String
  stack     String?
  path      String?
  context   Json?
  userId    BigInt?
  createdAt DateTime @default(now())

  @@index([createdAt])
}

model AdminAuditLog {
  id        BigInt   @id @default(autoincrement())
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId    BigInt?
  action    String
  resource  String
  detail    Json?
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}

enum EventType {
  PLAY_START
  PLAY_END
  SCRUB
  SKIP
  SEARCH
  ADD_TO_LIST
  THUMBS_UP
  THUMBS_DOWN
  IMPRESSION
}

model EngagementEvent {
  id         BigInt    @id @default(autoincrement())
  profile    Profile?  @relation(fields: [profileId], references: [id], onDelete: SetNull)
  profileId  BigInt?
  title      Title?    @relation(fields: [titleId], references: [id], onDelete: SetNull)
  titleId    BigInt?
  episode    Episode?  @relation(fields: [episodeId], references: [id], onDelete: SetNull)
  episodeId  BigInt?
  session    Session?  @relation(fields: [sessionId], references: [id], onDelete: SetNull)
  sessionId  BigInt?
  eventType  EventType
  occurredAt DateTime  @default(now())
  country    String?
  deviceId   String?
  metadata   Json?
  createdAt  DateTime  @default(now())

  @@index([profileId, occurredAt])
  @@index([titleId, occurredAt])
  @@index([eventType, occurredAt])
}

model PopularitySnapshot {
  id         BigInt           @id @default(autoincrement())
  country    String           @default("unknown")
  type       TitleType
  window     PopularityWindow
  computedAt DateTime         @default(now())
  items      Json

  @@unique([country, type, window])
  @@index([type, window])
}

model ProfilePreferenceSnapshot {
  id         BigInt   @id @default(autoincrement())
  profile    Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId  BigInt   @unique
  genres     String[] @default([])
  computedAt DateTime @default(now())
}

model ProfileRecentViews {
  id         BigInt   @id @default(autoincrement())
  profile    Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId  BigInt   @unique
  titleIds   BigInt[] @default([])
  updatedAt  DateTime @updatedAt
  computedAt DateTime @default(now())
}

model TitleEmbedding {
  id        BigInt   @id @default(autoincrement())
  title     Title    @relation(fields: [titleId], references: [id], onDelete: Cascade)
  titleId   BigInt   @unique
  model     String
  embedding Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([model])
}

model TitleSimilarity {
  id            BigInt   @id @default(autoincrement())
  sourceTitle   Title    @relation("SourceTitle", fields: [sourceTitleId], references: [id], onDelete: Cascade)
  sourceTitleId BigInt
  targetTitle   Title    @relation("TargetTitle", fields: [targetTitleId], references: [id], onDelete: Cascade)
  targetTitleId BigInt
  score         Float
  rationale     String   @default("co_watch")
  createdAt     DateTime @default(now())

  @@unique([sourceTitleId, targetTitleId])
  @@index([sourceTitleId, score])
}

enum PpvPurchaseStatus {
  PENDING
  SUCCESS
  FAILED
  CANCELLED
}

model PpvPurchase {
  id              BigInt            @id @default(autoincrement())
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          BigInt
  title           Title             @relation(fields: [titleId], references: [id], onDelete: Cascade)
  titleId         BigInt
  amountNaira     Int
  currency        String            @default("NGN")
  gateway         String            @default("PAYSTACK")
  paystackRef     String            @unique
  paystackTrxId   String?
  status          PpvPurchaseStatus @default(PENDING)
  rawPayload      Json?
  accessExpiresAt DateTime?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([userId, titleId, status])
  @@index([titleId])
  @@index([userId])
}

model PpvViolation {
  id        BigInt   @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    BigInt
  title     Title    @relation(fields: [titleId], references: [id], onDelete: Cascade)
  titleId   BigInt
  path      String?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId, titleId])
}

enum SupportTicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

model SupportTicket {
  id          BigInt              @id @default(autoincrement())
  user        User?               @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId      BigInt?
  email       String
  subject     String
  message     String
  status      SupportTicketStatus @default(OPEN)
  priority    String              @default("normal")
  source      String              @default("web")
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  lastReplyAt DateTime?

  messages SupportTicketMessage[]
}

model SupportTicketMessage {
  id        BigInt        @id @default(autoincrement())
  ticket    SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  ticketId  BigInt
  user      User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId    BigInt?
  isAdmin   Boolean       @default(false)
  message   String
  createdAt DateTime      @default(now())
}
