generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  SUPER_ADMIN
  CONTENT_MANAGER
  BLOG_EDITOR
  MODERATOR
  SUPPORT
  FINANCE
  ANALYTICS
  OPS
}

model User {
  id        BigInt   @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  emailVerified Boolean @default(false)
  verificationToken String? @unique
  verificationTokenExpires DateTime?
  resetToken String?
  resetTokenExpires DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions Session[]
  devices  Device[]
  profiles Profile[]
  billing  BillingAccount?
  deviceProfiles DeviceProfile[]
}

model Session {
  id           BigInt   @id @default(autoincrement())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       BigInt
  deviceId     String
  refreshToken String
  userAgent    String?
  ipAddress    String?
  createdAt    DateTime @default(now())
  expiresAt    DateTime

  @@index([userId, deviceId])
}

model Device {
  id            BigInt         @id @default(autoincrement())
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        BigInt
  deviceId      String
  label         String?
  lastSeen      DateTime       @default(now())
  createdAt     DateTime       @default(now())
  deviceProfile DeviceProfile? @relation("DeviceToProfile")

  @@unique([userId, deviceId])
}

model Invitation {
  id        BigInt   @id @default(autoincrement())
  email     String
  role      Role
  token     String   @unique
  expiresAt DateTime
  acceptedAt DateTime?
  createdBy BigInt
  createdAt DateTime @default(now())

  @@index([email])
}

model Profile {
  id         BigInt   @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     BigInt
  name       String
  avatarUrl  String?
  kidMode    Boolean  @default(false)
  language   String   @default("en")
  autoplay   Boolean  @default(true)
  preferences Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  devices DeviceProfile[]

  @@index([userId])
}

enum PaymentProvider {
  PAYSTACK
  FLUTTERWAVE
}

enum TitleType {
  MOVIE
  SERIES
}

enum Rendition {
  R4K
  R2K
  R1080
  R720
  R360
}

enum AssetStatus {
  PENDING
  PROCESSING
  READY
  FAILED
}

enum UploadStatus {
  PENDING
  UPLOADING
  PROCESSING
  COMPLETED
  FAILED
  CANCELED
}

model BillingAccount {
  id                  BigInt           @id @default(autoincrement())
  user                User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId              BigInt           @unique
  provider            PaymentProvider
  providerCustomerId  String?
  planCode            String?
  status              String          @default("inactive")
  billingEmail        String?
  paymentMethodBrand  String?
  paymentMethodLast4  String?
  country             String?
  postalCode          String?
  nextPaymentAt       DateTime?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
}

model DeviceProfile {
  id             BigInt    @id @default(autoincrement())
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         BigInt
  device         Device    @relation("DeviceToProfile", fields: [deviceRecordId], references: [id], onDelete: Cascade)
  deviceRecordId BigInt
  profile        Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId      BigInt
  lastUsedAt     DateTime  @default(now())

  @@unique([deviceRecordId])
  @@index([userId, profileId])
}

model Title {
  id          BigInt    @id @default(autoincrement())
  type        TitleType
  name        String
  description String?
  releaseDate DateTime?
  posterUrl   String?
  thumbnailUrl String?
  trailerUrl   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  episodes       Episode[]
  assetVersions  AssetVersion[]
  uploadJobs     UploadJob[]
}

model Episode {
  id            BigInt   @id @default(autoincrement())
  title         Title    @relation(fields: [titleId], references: [id], onDelete: Cascade)
  titleId       BigInt
  seasonNumber  Int
  episodeNumber Int
  name          String
  synopsis      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  assetVersions AssetVersion[]
  uploadJobs    UploadJob[]

  @@index([titleId, seasonNumber, episodeNumber])
}

model AssetVersion {
  id         BigInt      @id @default(autoincrement())
  title      Title?      @relation(fields: [titleId], references: [id], onDelete: Cascade)
  titleId    BigInt?
  episode    Episode?    @relation(fields: [episodeId], references: [id], onDelete: Cascade)
  episodeId  BigInt?
  rendition  Rendition
  url        String?
  sizeBytes  BigInt?
  durationSec Int?
  status     AssetStatus @default(PENDING)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@index([titleId, episodeId])
  @@unique([titleId, episodeId, rendition])
}

model UploadJob {
  id            BigInt       @id @default(autoincrement())
  title         Title?       @relation(fields: [titleId], references: [id], onDelete: Cascade)
  titleId       BigInt?
  episode       Episode?     @relation(fields: [episodeId], references: [id], onDelete: Cascade)
  episodeId     BigInt?
  status        UploadStatus @default(PENDING)
  bytesUploaded BigInt       @default(0)
  bytesTotal    BigInt?
  error         String?
  payload       Json?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([titleId, episodeId, status])
}
